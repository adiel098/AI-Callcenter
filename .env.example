# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_scheduler

# Redis
REDIS_URL=redis://localhost:6379/0

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# ElevenLabs
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key_here

# Deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google Calendar
# For Development (OAuth): Use credentials.json + token.json
# For Production (Service Account): Use service-account.json (overrides OAuth)
GOOGLE_CALENDAR_CREDENTIALS_FILE=backend/credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=backend/token.json
GOOGLE_CALENDAR_SERVICE_ACCOUNT_FILE=backend/service-account.json
GOOGLE_CALENDAR_ID=your_email@gmail.com

# Domain-Wide Delegation (optional - enables Google Meet links with service accounts)
# Requires: Google Workspace admin access + Domain-Wide Delegation setup
# Leave empty if not using delegation
# GOOGLE_DELEGATED_USER_EMAIL=admin@yourdomain.com

# Zoom (optional - simpler alternative to Google Meet)
# Create Server-to-Server OAuth app at: https://marketplace.zoom.us/
# Navigate to: Develop → Build App → Server-to-Server OAuth
# ZOOM_ACCOUNT_ID=your_zoom_account_id
# ZOOM_CLIENT_ID=your_zoom_client_id
# ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Email/SMTP (for sending calendar invites)
# Option 1: Gmail with App Password (recommended for development)
# Generate app password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_business_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
COMPANY_NAME=Alta AI

# Option 2: SendGrid (recommended for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key_here

# Application
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
SECRET_KEY=your_secret_key_here_change_in_production

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Call Settings
MAX_CONCURRENT_CALLS=50
CALL_TIMEOUT_SECONDS=300
MAX_CONVERSATION_TURNS=20
