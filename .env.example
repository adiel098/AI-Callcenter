# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_scheduler

# Redis
REDIS_URL=redis://localhost:6379/0

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Google Calendar
# For Development (OAuth): Use credentials.json + token.json
# For Production (Service Account): Use service-account.json (overrides OAuth)
GOOGLE_CALENDAR_CREDENTIALS_FILE=backend/credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=backend/token.json
GOOGLE_CALENDAR_SERVICE_ACCOUNT_FILE=backend/service-account.json
GOOGLE_CALENDAR_ID=your_email@gmail.com

# Zoom Video Conferencing (REQUIRED for video meeting links)
# Creates Zoom links automatically for all booked meetings
# Setup guide: See ZOOM_SETUP.md for detailed instructions
# Steps:
#   1. Go to https://marketplace.zoom.us/
#   2. Create Server-to-Server OAuth app
#   3. Add scopes: meeting:write and meeting:write:admin
#   4. Copy Account ID, Client ID, and Client Secret below
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Domain-Wide Delegation (Optional - for service accounts in Google Workspace)
# Only needed if using Google Workspace service account with domain-wide delegation
# GOOGLE_DELEGATED_USER_EMAIL=admin@yourdomain.com

# Application
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
SECRET_KEY=your_secret_key_here_change_in_production

# Monitoring
SENTRY_DSN=your_sentry_dsn
